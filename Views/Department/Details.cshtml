@model VcBlazor.Data.Entities.Department

@{
    ViewData["Title"] = "Détails Département - ETOUDI 2025";
}

<div class="container-fluid py-4">
    <!-- En-tête -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm bg-gradient-info text-white">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="h3 mb-2">
                                <i class="fas fa-building me-2"></i>
                                Département @Model.Name
                            </h1>
                            <p class="mb-0 opacity-90">
                                @if (Model.Region != null)
                                {
                                    <span>Région : <strong>@Model.Region.Name</strong></span>
                                }
                                else
                                {
                                    <span>Code région : <strong>@Model.RegionId</strong></span>
                                }
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="btn-group">
                                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                                    <i class="fas fa-edit me-1"></i>
                                    Modifier
                                </a>
                                <a href="@Url.Action("Index")" class="btn btn-light">
                                    <i class="fas fa-arrow-left me-1"></i>
                                    Retour
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenu principal -->
    <div class="row">
        <!-- Informations du département -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Informations du département
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-building text-primary me-2"></i>
                                    Nom du département
                                </label>
                                <div class="info-value">@Model.Name</div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-code text-primary me-2"></i>
                                    Code
                                </label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.Code))
                                    {
                                        <code>@Model.Code</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non défini</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-12 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-globe text-primary me-2"></i>
                                    Région de rattachement
                                </label>
                                <div class="info-value">
                                    @if (Model.Region != null)
                                    {
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-primary me-2">@Model.Region.Name</span>
                                            <small class="text-muted">(ID: @Model.RegionId)</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Région ID: @Model.RegionId</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistiques -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Statistiques
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="stat-item mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-city text-primary me-2"></i>
                                <span class="fw-bold">Arrondissements</span>
                            </div>
                            <span class="badge bg-primary fs-6">@Model.Arrondissements.Count</span>
                        </div>
                    </div>

                    @if (Model.Arrondissements.Any())
                    {
                        <div class="mt-3">
                            <small class="text-muted fw-bold">Liste des arrondissements :</small>
                            <div class="mt-2">
                                @foreach (var arr in Model.Arrondissements.Take(5))
                                {
                                    <span class="badge bg-outline-secondary me-1 mb-1">@arr.Name</span>
                                }
                                @if (Model.Arrondissements.Count > 5)
                                {
                                    <small class="text-muted d-block mt-1">... et @(Model.Arrondissements.Count - 5) de plus</small>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Arrondissements détaillés -->
    @if (Model.Arrondissements.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light border-0 py-3">
                        <h5 class="mb-0">
                            <i class="fas fa-city me-2"></i>
                            Arrondissements du département
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th><i class="fas fa-hashtag me-1"></i>ID</th>
                                        <th><i class="fas fa-city me-1"></i>Nom</th>
                                        <th><i class="fas fa-code me-1"></i>Code</th>
                                        <th><i class="fas fa-clock me-1"></i>Créé le</th>
                                        <th><i class="fas fa-cogs me-1"></i>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var arrondissement in Model.Arrondissements.OrderBy(a => a.Name))
                                    {
                                        <tr>
                                            <td><code>@arrondissement.Id</code></td>
                                            <td>
                                                <strong>@arrondissement.Name</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(arrondissement.Code))
                                                {
                                                    <code>@arrondissement.Code</code>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <small>@arrondissement.CreatedAt.ToString("dd/MM/yyyy")</small>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "Arrondissement", new { id = arrondissement.Id })" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i>Voir
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Métadonnées -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2"></i>
                        Informations système
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-hashtag text-primary me-2"></i>
                                    ID du département
                                </label>
                                <div class="info-value">
                                    <code>@Model.Id</code>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-plus-circle text-primary me-2"></i>
                                    Date de création
                                </label>
                                <div class="info-value">
                                    @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-edit text-primary me-2"></i>
                                    Dernière modification
                                </label>
                                <div class="info-value">
                                    @Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-info {
        background: linear-gradient(45deg, #0dcaf0, #0891b2);
    }
    
    .info-item {
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(0,0,0,0.1);
    }
    
    .info-item:last-child {
        border-bottom: none;
    }
    
    .info-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: #6c757d;
        margin-bottom: 0.25rem;
        display: block;
    }
    
    .info-value {
        font-size: 1rem;
        font-weight: 500;
        color: #212529;
    }
    
    .stat-item {
        padding: 0.5rem 0;
    }
    
    .badge.fs-6 {
        font-size: 0.875rem !important;
        padding: 0.5rem 0.75rem;
    }
    
    code {
        background-color: #f8f9fa;
        color: #e83e8c;
        padding: 0.2rem 0.4rem;
        border-radius: 0.25rem;
    }
</style>