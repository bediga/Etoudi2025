@{
    ViewData["Title"] = "Accès refusé";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mt-5">
                <div class="error-icon mb-4">
                    <i class="fas fa-shield-alt text-danger" style="font-size: 6rem;"></i>
                </div>
                
                <h1 class="display-4 text-danger mb-4">Accès Refusé</h1>
                
                <div class="card shadow">
                    <div class="card-body p-4">
                        <h4 class="card-title text-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            Permissions Insuffisantes
                        </h4>
                        
                        <p class="card-text lead mb-4">
                            Vous n'avez pas les permissions nécessaires pour accéder à cette ressource.
                        </p>
                        
                        <div class="alert alert-info" role="alert">
                            <h6 class="alert-heading">
                                <i class="fas fa-info-circle"></i> Information
                            </h6>
                            <p class="mb-2">
                                Cette section nécessite des privilèges spécifiques. 
                                Si vous pensez que c'est une erreur, contactez votre administrateur système.
                            </p>
                            <hr>
                            <p class="mb-0">
                                <strong>Votre rôle actuel:</strong> 
                                <span class="badge bg-primary">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                            </p>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-home"></i> Retour à l'accueil
                            </a>
                            <button onclick="history.back()" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Page précédente
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Contact administrateur -->
                <div class="mt-4">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="fas fa-phone text-success"></i> Besoin d'aide ?
                            </h6>
                            <p class="card-text small text-muted">
                                Contactez l'équipe de support technique pour une assistance ou 
                                pour demander des permissions supplémentaires.
                            </p>
                            <div class="d-flex justify-content-center">
                                <small class="text-muted">
                                    <i class="fas fa-envelope me-2"></i> support@vcblazor.cm
                                    <span class="mx-3">|</span>
                                    <i class="fas fa-phone me-2"></i> +237 XXX XXX XXX
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-icon {
        animation: pulse 2s ease-in-out infinite alternate;
    }
    
    @@keyframes pulse {
        0% { transform: scale(1); }
        100% { transform: scale(1.1); }
    }
    
    .card {
        border: none;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
    
    .btn {
        border-radius: 50px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
    }
</style>