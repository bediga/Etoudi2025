@model VcBlazor.Data.Entities.VotingCenter

@{
    ViewData["Title"] = "Détails Centre - ETOUDI 2025";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- En-tête -->
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div class="flex-grow-1">
                    <h2 class="h3 mb-1">
                        <i class="fas fa-warehouse text-primary"></i>
                        Détails du Centre de Vote
                    </h2>
                    <p class="text-muted mb-0">Informations complètes du centre de vote</p>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger"
                       onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce centre de vote ?')">
                        <i class="fas fa-trash"></i> Supprimer
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- Informations principales -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-info-circle me-2"></i>Informations Générales
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-warehouse me-2"></i>Nom du Centre
                                    </label>
                                    <p class="fs-5 fw-semibold text-dark">@Model.Name</p>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-hashtag me-2"></i>ID Système
                                    </label>
                                    <p class="fs-5 fw-semibold text-dark">@Model.Id</p>
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-map-marker-alt me-2"></i>Adresse
                                    </label>
                                    <p class="fs-6 text-dark">@Model.Address</p>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-building me-2"></i>Commune
                                    </label>
                                    @if (Model.Commune != null)
                                    {
                                        <p class="fs-6">
                                            <span class="badge bg-info-subtle text-info fs-6">@Model.Commune.Name</span>
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="text-muted fst-italic">Non définie</p>
                                    }
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-info-circle me-2"></i>Statut
                                    </label>
                                    <p>
                                        @if (Model.Status == "active")
                                        {
                                            <span class="badge bg-success fs-6">
                                                <i class="fas fa-check-circle me-1"></i>Actif
                                            </span>
                                        }
                                        else if (Model.Status == "inactive")
                                        {
                                            <span class="badge bg-danger fs-6">
                                                <i class="fas fa-times-circle me-1"></i>Inactif
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning fs-6">
                                                <i class="fas fa-wrench me-1"></i>En maintenance
                                            </span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Coordonnées GPS -->
                    @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                    {
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-map-pin me-2"></i>Localisation GPS
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="form-label text-muted">
                                            <i class="fas fa-compass me-2"></i>Latitude
                                        </label>
                                        <p class="fs-5 fw-semibold text-dark">@Model.Latitude.Value.ToString("F6")</p>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label text-muted">
                                            <i class="fas fa-compass me-2"></i>Longitude
                                        </label>
                                        <p class="fs-5 fw-semibold text-dark">@Model.Longitude.Value.ToString("F6")</p>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <a href="https://www.google.com/maps?q=@Model.Latitude,@Model.Longitude" 
                                       target="_blank" class="btn btn-outline-success">
                                        <i class="fas fa-external-link-alt me-2"></i>Voir sur Google Maps
                                    </a>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Historique -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-clock me-2"></i>Historique
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-plus-circle me-2"></i>Date de Création
                                    </label>
                                    <p class="text-dark">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-edit me-2"></i>Dernière Modification
                                    </label>
                                    <p class="text-dark">@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Statistiques -->
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-bar me-2"></i>Statistiques
                            </h5>
                        </div>
                        <div class="card-body text-center">
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <div class="border rounded p-3 bg-light">
                                        <i class="fas fa-users fa-2x text-primary mb-2"></i>
                                        <h3 class="mb-1">@Model.Capacity.ToString("N0")</h3>
                                        <p class="text-muted mb-0">Capacité (électeurs)</p>
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="border rounded p-3 bg-light">
                                        <i class="fas fa-vote-yea fa-2x text-success mb-2"></i>
                                        <h3 class="mb-1">@Model.PollingStationsCount</h3>
                                        <p class="text-muted mb-0">Bureaux de Vote</p>
                                    </div>
                                </div>
                                @if (Model.PollingStationsCount > 0)
                                {
                                    <div class="col-12">
                                        <div class="border rounded p-3 bg-light">
                                            <i class="fas fa-calculator fa-2x text-info mb-2"></i>
                                            <h3 class="mb-1">@((Model.Capacity / Math.Max(Model.PollingStationsCount, 1)).ToString("N0"))</h3>
                                            <p class="text-muted mb-0">Électeurs/Bureau (moy.)</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Actions rapides -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-bolt me-2"></i>Actions Rapides
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a asp-controller="PollingStation" asp-action="Index" 
                                   class="btn btn-outline-primary">
                                    <i class="fas fa-vote-yea me-2"></i>Gérer les Bureaux
                                </a>
                                <a asp-action="Edit" asp-route-id="@Model.Id" 
                                   class="btn btn-outline-secondary">
                                    <i class="fas fa-edit me-2"></i>Modifier le Centre
                                </a>
                                <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#shareModal">
                                    <i class="fas fa-share me-2"></i>Partager Info
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de partage -->
<div class="modal fade" id="shareModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Partager les Informations</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Centre de Vote: <strong>@Model.Name</strong></p>
                <p>Adresse: @Model.Address</p>
                @if (Model.Commune != null)
                {
                    <p>Commune: @Model.Commune.Name</p>
                }
                <p>Capacité: @Model.Capacity électeurs</p>
                <p>Bureaux: @Model.PollingStationsCount</p>
                @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                {
                    <p>GPS: @Model.Latitude.Value.ToString("F6"), @Model.Longitude.Value.ToString("F6")</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                <button type="button" class="btn btn-primary" onclick="copyToClipboard()">
                    <i class="fas fa-copy me-2"></i>Copier
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyToClipboard() {
            const text = `Centre de Vote: @Model.Name
Adresse: @Model.Address
@(Model.Commune != null ? $"Commune: {Model.Commune.Name}" : "")
Capacité: @Model.Capacity électeurs
Bureaux: @Model.PollingStationsCount
@(Model.Latitude.HasValue && Model.Longitude.HasValue ? $"GPS: {Model.Latitude.Value:F6}, {Model.Longitude.Value:F6}" : "")`;
            
            navigator.clipboard.writeText(text).then(function() {
                alert('Informations copiées dans le presse-papier !');
            });
        }
    </script>
}

<style>
    .form-label {
        font-size: 0.875rem;
        font-weight: 600;
    }
    
    .card-header {
        border-bottom: none;
    }
    
    .bg-light {
        background-color: #f8f9fa !important;
    }
    
    .badge {
        padding: 0.5rem 0.75rem;
    }
</style>