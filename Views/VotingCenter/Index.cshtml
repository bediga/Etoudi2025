@model IEnumerable<VcBlazor.Data.Entities.VotingCenter>

@{
    ViewData["Title"] = "Centres de Vote - ETOUDI 2025";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- En-tête -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="h3 mb-1">
                        <i class="fas fa-warehouse text-primary"></i>
                        Centres de Vote
                    </h2>
                    <p class="text-muted mb-0">Gestion des centres de vote électoraux</p>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nouveau Centre
                    </a>
                </div>
            </div>

            <!-- Messages de feedback -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Statistiques -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0">@Model.Count()</h4>
                                    <p class="mb-0">Total Centres</p>
                                </div>
                                <i class="fas fa-warehouse fa-2x opacity-75"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0">@Model.Count(v => v.Status == "active")</h4>
                                    <p class="mb-0">Centres Actifs</p>
                                </div>
                                <i class="fas fa-check-circle fa-2x opacity-75"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0">@Model.Sum(v => v.Capacity)</h4>
                                    <p class="mb-0">Capacité Totale</p>
                                </div>
                                <i class="fas fa-users fa-2x opacity-75"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0">@Model.Sum(v => v.PollingStationsCount)</h4>
                                    <p class="mb-0">Total Bureaux</p>
                                </div>
                                <i class="fas fa-vote-yea fa-2x opacity-75"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Table des centres de vote -->
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th><i class="fas fa-warehouse me-2"></i>Centre</th>
                                    <th><i class="fas fa-map-marker-alt me-2"></i>Adresse</th>
                                    <th><i class="fas fa-building me-2"></i>Commune</th>
                                    <th><i class="fas fa-users me-2"></i>Capacité</th>
                                    <th><i class="fas fa-vote-yea me-2"></i>Bureaux</th>
                                    <th><i class="fas fa-info-circle me-2"></i>Statut</th>
                                    <th class="text-end"><i class="fas fa-cogs me-2"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var center in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm rounded-circle bg-primary-subtle d-flex align-items-center justify-content-center me-3">
                                                        <i class="fas fa-warehouse text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@center.Name</h6>
                                                        <small class="text-muted">ID: @center.Id</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@center.Address">
                                                    @center.Address
                                                </span>
                                            </td>
                                            <td>
                                                @if (center.Commune != null)
                                                {
                                                    <span class="badge bg-info-subtle text-info">@center.Commune.Name</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Non définie</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-users text-primary me-2"></i>
                                                    <span class="fw-semibold">@center.Capacity</span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-vote-yea text-success me-2"></i>
                                                    <span class="fw-semibold">@center.PollingStationsCount</span>
                                                </div>
                                            </td>
                                            <td>
                                                @if (center.Status == "active")
                                                {
                                                    <span class="badge bg-success-subtle text-success">
                                                        <i class="fas fa-check-circle me-1"></i>Actif
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger-subtle text-danger">
                                                        <i class="fas fa-times-circle me-1"></i>Inactif
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@center.Id" 
                                                       class="btn btn-sm btn-outline-primary" title="Voir détails">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@center.Id" 
                                                       class="btn btn-sm btn-outline-secondary" title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@center.Id" 
                                                       class="btn btn-sm btn-outline-danger" title="Supprimer"
                                                       onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce centre de vote ?')">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-5">
                                            <div class="d-flex flex-column align-items-center text-muted">
                                                <i class="fas fa-warehouse fa-3x mb-3 opacity-50"></i>
                                                <h5>Aucun centre de vote trouvé</h5>
                                                <p class="mb-3">Commencez par ajouter votre premier centre de vote.</p>
                                                <a asp-action="Create" class="btn btn-primary">
                                                    <i class="fas fa-plus me-2"></i>Ajouter un Centre
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-sm {
        width: 40px;
        height: 40px;
    }
    
    .table th {
        font-weight: 600;
        color: #495057;
        border-bottom: 2px solid #dee2e6;
    }
    
    .card {
        transition: all 0.3s ease;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }
    
    .btn-group .btn {
        border-radius: 0.375rem;
    }
    
    .btn-group .btn + .btn {
        margin-left: 2px;
    }
</style>