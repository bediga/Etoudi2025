@model VcBlazor.Data.Entities.VotingCenter

@{
    ViewData["Title"] = "Nouveau Centre de Vote - ETOUDI 2025";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- En-tête -->
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div>
                    <h2 class="h3 mb-1">
                        <i class="fas fa-warehouse text-primary"></i>
                        Nouveau Centre de Vote
                    </h2>
                    <p class="text-muted mb-0">Ajout d'un nouveau centre de vote électoral</p>
                </div>
            </div>

            <!-- Formulaire -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                        
                        <div class="row">
                            <!-- Informations de base -->
                            <div class="col-md-12 mb-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-info-circle me-2"></i>Informations Générales
                                </h5>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">
                                        <i class="fas fa-warehouse me-2"></i>Nom du Centre *
                                    </label>
                                    <input asp-for="Name" class="form-control" placeholder="Ex: Centre Electoral Yaoundé 1er" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CommuneId" class="form-label">
                                        <i class="fas fa-building me-2"></i>Commune *
                                    </label>
                                    <select asp-for="CommuneId" class="form-select" asp-items="ViewBag.CommuneId" required>
                                        <option value="">-- Sélectionner une commune --</option>
                                    </select>
                                    <span asp-validation-for="CommuneId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label">
                                        <i class="fas fa-map-marker-alt me-2"></i>Adresse Complète *
                                    </label>
                                    <textarea asp-for="Address" class="form-control" rows="3" 
                                              placeholder="Ex: Rue de la République, Quartier Centre, Yaoundé" required></textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Capacité et Statut -->
                            <div class="col-md-12 mb-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-cogs me-2"></i>Configuration
                                </h5>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Capacity" class="form-label">
                                        <i class="fas fa-users me-2"></i>Capacité (électeurs)
                                    </label>
                                    <input asp-for="Capacity" type="number" class="form-control" min="0" placeholder="1000" />
                                    <span asp-validation-for="Capacity" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="PollingStationsCount" class="form-label">
                                        <i class="fas fa-vote-yea me-2"></i>Nombre de Bureaux
                                    </label>
                                    <input asp-for="PollingStationsCount" type="number" class="form-control" min="0" placeholder="5" />
                                    <span asp-validation-for="PollingStationsCount" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label">
                                        <i class="fas fa-info-circle me-2"></i>Statut
                                    </label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="active">Actif</option>
                                        <option value="inactive">Inactif</option>
                                        <option value="maintenance">En maintenance</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Coordonnées GPS (optionnel) -->
                            <div class="col-md-12 mb-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-map me-2"></i>Localisation GPS (Optionnel)
                                </h5>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Latitude" class="form-label">
                                        <i class="fas fa-map-pin me-2"></i>Latitude
                                    </label>
                                    <input asp-for="Latitude" type="number" step="0.000001" class="form-control" placeholder="3.8480" />
                                    <span asp-validation-for="Latitude" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Longitude" class="form-label">
                                        <i class="fas fa-map-pin me-2"></i>Longitude
                                    </label>
                                    <input asp-for="Longitude" type="number" step="0.000001" class="form-control" placeholder="11.5021" />
                                    <span asp-validation-for="Longitude" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Créer le Centre
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Auto-formatage des coordonnées GPS
        document.addEventListener('DOMContentLoaded', function() {
            const latInput = document.querySelector('input[name="Latitude"]');
            const longInput = document.querySelector('input[name="Longitude"]');
            
            [latInput, longInput].forEach(input => {
                if (input) {
                    input.addEventListener('input', function() {
                        let value = this.value;
                        if (value && !isNaN(value)) {
                            this.value = parseFloat(value).toFixed(6);
                        }
                    });
                }
            });
        });
    </script>
}

<style>
    .form-label {
        font-weight: 600;
        color: #495057;
    }
    
    .form-control, .form-select {
        border: 1px solid #ced4da;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
    
    .card {
        transition: all 0.3s ease;
    }
    
    .text-primary {
        color: #0d6efd !important;
    }
    
    h5 {
        font-weight: 600;
    }
</style>