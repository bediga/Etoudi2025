@model VcBlazor.Data.Entities.PollingStation

@{
    ViewData["Title"] = "Nouveau Bureau de Vote - ETOUDI 2025";
}

<div class="container-fluid py-4">
    <!-- En-tête -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm bg-gradient-primary text-white">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="h3 mb-2">
                                <i class="fas fa-plus-circle me-2"></i>
                                Créer un Nouveau Bureau de Vote
                            </h1>
                            <p class="mb-0 opacity-90">Ajouter un bureau de vote au système électoral ETOUDI 2025</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <a href="@Url.Action("Index")" class="btn btn-light btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>
                                Retour à la liste
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulaire de création -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Informations du Bureau de Vote
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                        
                        <!-- Informations de base -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Informations générales
                                </h6>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Nom du bureau -->
                            <div class="col-md-8 mb-3">
                                <label asp-for="Name" class="form-label fw-bold">
                                    <i class="fas fa-building me-1"></i>
                                    Nom du Bureau de Vote *
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg" 
                                       placeholder="Ex: École Primaire Publique de Mvog-Ada" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-lightbulb me-1"></i>
                                    Nom ou lieu du bureau de vote
                                </div>
                            </div>

                            <!-- Statut -->
                            <div class="col-md-4 mb-3">
                                <label asp-for="Status" class="form-label fw-bold">
                                    <i class="fas fa-flag me-1"></i>
                                    Statut
                                </label>
                                <select asp-for="Status" class="form-select form-control-lg">
                                    <option value="pending">En attente</option>
                                    <option value="active">Actif</option>
                                    <option value="suspended">Suspendu</option>
                                    <option value="closed">Fermé</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Localisation administrative -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-map-marked-alt me-2"></i>
                                    Localisation administrative
                                </h6>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Region" class="form-label fw-bold">
                                    <i class="fas fa-globe me-1"></i>
                                    Région
                                </label>
                                <input asp-for="Region" class="form-control form-control-lg" 
                                       placeholder="Ex: Centre, Littoral..." />
                                <span asp-validation-for="Region" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Department" class="form-label fw-bold">
                                    <i class="fas fa-building me-1"></i>
                                    Département
                                </label>
                                <input asp-for="Department" class="form-control form-control-lg" 
                                       placeholder="Ex: Mfoundi, Wouri..." />
                                <span asp-validation-for="Department" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Arrondissement" class="form-label fw-bold">
                                    <i class="fas fa-city me-1"></i>
                                    Arrondissement
                                </label>
                                <input asp-for="Arrondissement" class="form-control form-control-lg" 
                                       placeholder="Ex: Yaoundé 1er, Douala 1er..." />
                                <span asp-validation-for="Arrondissement" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Commune" class="form-label fw-bold">
                                    <i class="fas fa-home me-1"></i>
                                    Commune
                                </label>
                                <input asp-for="Commune" class="form-control form-control-lg" 
                                       placeholder="Ex: Yaoundé, Douala..." />
                                <span asp-validation-for="Commune" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Adresse et géolocalisation -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-map-pin me-2"></i>
                                    Adresse et géolocalisation
                                </h6>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="Address" class="form-label fw-bold">
                                    <i class="fas fa-map-marker-alt me-1"></i>
                                    Adresse complète
                                </label>
                                <textarea asp-for="Address" class="form-control" rows="3"
                                          placeholder="Adresse détaillée du bureau de vote..."></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Latitude" class="form-label fw-bold">
                                    <i class="fas fa-globe me-1"></i>
                                    Latitude
                                </label>
                                <input asp-for="Latitude" type="number" step="any" class="form-control form-control-lg" 
                                       placeholder="Ex: 3.848033" />
                                <span asp-validation-for="Latitude" class="text-danger"></span>
                                <div class="form-text">Coordonnée GPS (optionnel)</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Longitude" class="form-label fw-bold">
                                    <i class="fas fa-globe me-1"></i>
                                    Longitude
                                </label>
                                <input asp-for="Longitude" type="number" step="any" class="form-control form-control-lg" 
                                       placeholder="Ex: 11.502075" />
                                <span asp-validation-for="Longitude" class="text-danger"></span>
                                <div class="form-text">Coordonnée GPS (optionnel)</div>
                            </div>
                        </div>

                        <!-- Informations électorales -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-users me-2"></i>
                                    Informations électorales
                                </h6>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="RegisteredVoters" class="form-label fw-bold">
                                    <i class="fas fa-user-check me-1"></i>
                                    Électeurs inscrits
                                </label>
                                <input asp-for="RegisteredVoters" type="number" class="form-control form-control-lg" 
                                       placeholder="Nombre d'électeurs" min="0" />
                                <span asp-validation-for="RegisteredVoters" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="ScrutineersCount" class="form-label fw-bold">
                                    <i class="fas fa-eye me-1"></i>
                                    Nombre de scrutateurs
                                </label>
                                <input asp-for="ScrutineersCount" type="number" class="form-control form-control-lg" 
                                       placeholder="0" min="0" />
                                <span asp-validation-for="ScrutineersCount" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="ObserversCount" class="form-label fw-bold">
                                    <i class="fas fa-binoculars me-1"></i>
                                    Nombre d'observateurs
                                </label>
                                <input asp-for="ObserversCount" type="number" class="form-control form-control-lg" 
                                       placeholder="0" min="0" />
                                <span asp-validation-for="ObserversCount" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Actions -->
                        <hr class="my-4">
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="text-muted">
                                        <i class="fas fa-asterisk text-danger me-1" style="font-size: 0.7em;"></i>
                                        Champs obligatoires
                                    </div>
                                    <div>
                                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg me-2">
                                            <i class="fas fa-times me-2"></i>
                                            Annuler
                                        </a>
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="fas fa-save me-2"></i>
                                            Créer le Bureau de Vote
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Validation Scripts -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Animation pour le focus des champs
        $(document).ready(function() {
            $('.form-control, .form-select').on('focus', function() {
                $(this).parent().find('.form-label').addClass('text-primary');
            }).on('blur', function() {
                $(this).parent().find('.form-label').removeClass('text-primary');
            });

            // Validation en temps réel
            $('#Name').on('input', function() {
                var value = $(this).val().trim();
                if (value.length > 0) {
                    $(this).removeClass('is-invalid').addClass('is-valid');
                } else {
                    $(this).removeClass('is-valid').addClass('is-invalid');
                }
            });

            // Validation des coordonnées GPS
            $('#Latitude, #Longitude').on('input', function() {
                var value = parseFloat($(this).val());
                var isLat = $(this).attr('id') === 'Latitude';
                
                if (!isNaN(value)) {
                    if (isLat && (value >= -90 && value <= 90)) {
                        $(this).removeClass('is-invalid').addClass('is-valid');
                    } else if (!isLat && (value >= -180 && value <= 180)) {
                        $(this).removeClass('is-invalid').addClass('is-valid');
                    } else {
                        $(this).removeClass('is-valid').addClass('is-invalid');
                    }
                } else if ($(this).val() === '') {
                    $(this).removeClass('is-valid is-invalid');
                }
            });

            // Validation du nombre d'électeurs
            $('#RegisteredVoters').on('input', function() {
                var value = parseInt($(this).val());
                if (!isNaN(value) && value >= 0) {
                    $(this).removeClass('is-invalid').addClass('is-valid');
                } else if ($(this).val() !== '') {
                    $(this).removeClass('is-valid').addClass('is-invalid');
                }
            });
        });
    </script>
}

<style>
    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }
    
    .form-label {
        transition: color 0.2s ease;
    }
    
    .bg-gradient-primary {
        background: linear-gradient(45deg, #0d6efd, #0056b3);
    }
</style>