@model VcBlazor.Data.Entities.PollingStation

@{
    ViewData["Title"] = "Détails Bureau de Vote - ETOUDI 2025";
}

<div class="container-fluid py-4">
    <!-- En-tête -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm bg-gradient-info text-white">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="h3 mb-2">
                                <i class="fas fa-building me-2"></i>
                                @Model.Name
                            </h1>
                            <p class="mb-0 opacity-90">Détails complets du bureau de vote</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="btn-group">
                                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                                    <i class="fas fa-edit me-1"></i>
                                    Modifier
                                </a>
                                <a href="@Url.Action("Index")" class="btn btn-light">
                                    <i class="fas fa-arrow-left me-1"></i>
                                    Retour
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenu principal -->
    <div class="row">
        <!-- Informations générales -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Informations générales
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-building text-primary me-2"></i>
                                    Nom du bureau
                                </label>
                                <div class="info-value">@Model.Name</div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-flag text-primary me-2"></i>
                                    Statut
                                </label>
                                <div class="info-value">
                                    @switch (Model.Status?.ToLower())
                                    {
                                        case "active":
                                            <span class="badge bg-success fs-6">
                                                <i class="fas fa-check-circle me-1"></i>
                                                Actif
                                            </span>
                                            break;
                                        case "pending":
                                            <span class="badge bg-warning fs-6">
                                                <i class="fas fa-clock me-1"></i>
                                                En attente
                                            </span>
                                            break;
                                        case "suspended":
                                            <span class="badge bg-danger fs-6">
                                                <i class="fas fa-pause me-1"></i>
                                                Suspendu
                                            </span>
                                            break;
                                        case "closed":
                                            <span class="badge bg-secondary fs-6">
                                                <i class="fas fa-times-circle me-1"></i>
                                                Fermé
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary fs-6">@Model.Status</span>
                                            break;
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-12 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                    Adresse complète
                                </label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.Address))
                                    {
                                        @Model.Address
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non spécifiée</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistiques -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Statistiques
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="stat-item mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-users text-primary me-2"></i>
                                <span class="fw-bold">Électeurs inscrits</span>
                            </div>
                            <span class="badge bg-primary fs-6">@Model.RegisteredVoters.ToString("N0")</span>
                        </div>
                    </div>

                    <div class="stat-item mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-eye text-success me-2"></i>
                                <span class="fw-bold">Scrutateurs</span>
                            </div>
                            <span class="badge bg-success fs-6">@Model.ScrutineersCount.ToString()</span>
                        </div>
                    </div>

                    <div class="stat-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-binoculars text-info me-2"></i>
                                <span class="fw-bold">Observateurs</span>
                            </div>
                            <span class="badge bg-info fs-6">@Model.ObserversCount.ToString()</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Localisation administrative -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-map-marked-alt me-2"></i>
                        Localisation administrative
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-globe text-primary me-2"></i>
                                    Région
                                </label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.Region))
                                    {
                                        @Model.Region
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non spécifiée</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-building text-primary me-2"></i>
                                    Département
                                </label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.Department))
                                    {
                                        @Model.Department
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non spécifié</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-city text-primary me-2"></i>
                                    Arrondissement
                                </label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.Arrondissement))
                                    {
                                        @Model.Arrondissement
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non spécifié</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-home text-primary me-2"></i>
                                    Commune
                                </label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(Model.Commune))
                                    {
                                        @Model.Commune
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non spécifiée</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Géolocalisation -->
    @if (Model.Latitude.HasValue || Model.Longitude.HasValue)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light border-0 py-3">
                        <h5 class="mb-0">
                            <i class="fas fa-map-pin me-2"></i>
                            Géolocalisation
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="info-item">
                                    <label class="info-label">
                                        <i class="fas fa-globe text-primary me-2"></i>
                                        Latitude
                                    </label>
                                    <div class="info-value">
                                        @if (Model.Latitude.HasValue)
                                        {
                                            @Model.Latitude.Value.ToString("F6")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Non définie</span>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="info-item">
                                    <label class="info-label">
                                        <i class="fas fa-globe text-primary me-2"></i>
                                        Longitude
                                    </label>
                                    <div class="info-value">
                                        @if (Model.Longitude.HasValue)
                                        {
                                            @Model.Longitude.Value.ToString("F6")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Non définie</span>
                                        }
                                    </div>
                                </div>
                            </div>

                            @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                            {
                                <div class="col-12">
                                    <div class="mt-3">
                                        <a href="https://maps.google.com/?q=@Model.Latitude,@Model.Longitude" 
                                           target="_blank" class="btn btn-outline-primary">
                                            <i class="fas fa-external-link-alt me-2"></i>
                                            Voir sur Google Maps
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Métadonnées -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2"></i>
                        Informations système
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-hashtag text-primary me-2"></i>
                                    ID du bureau
                                </label>
                                <div class="info-value">
                                    <code>@Model.Id</code>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-plus-circle text-primary me-2"></i>
                                    Date de création
                                </label>
                                <div class="info-value">
                                    @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-edit text-primary me-2"></i>
                                    Dernière modification
                                </label>
                                <div class="info-value">
                                    @Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-info {
        background: linear-gradient(45deg, #0dcaf0, #0891b2);
    }
    
    .info-item {
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(0,0,0,0.1);
    }
    
    .info-item:last-child {
        border-bottom: none;
    }
    
    .info-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: #6c757d;
        margin-bottom: 0.25rem;
        display: block;
    }
    
    .info-value {
        font-size: 1rem;
        font-weight: 500;
        color: #212529;
    }
    
    .stat-item {
        padding: 0.5rem 0;
    }
    
    .badge.fs-6 {
        font-size: 0.875rem !important;
        padding: 0.5rem 0.75rem;
    }
    
    code {
        background-color: #f8f9fa;
        color: #e83e8c;
        padding: 0.2rem 0.4rem;
        border-radius: 0.25rem;
    }
</style>