@model IEnumerable<VcBlazor.Data.Entities.PollingStation>

@{
    ViewData["Title"] = "Bureaux de Vote";
}

<div class="row mb-3">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Accueil</a></li>
                <li class="breadcrumb-item active">Bureaux de Vote</li>
            </ol>
        </nav>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-map-marker-alt text-info"></i>
        @ViewData["Title"] - ETOUDI 2025
    </h2>
    <div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouveau Bureau
        </a>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-outline-success dropdown-toggle" data-bs-toggle="dropdown">
                <i class="fas fa-filter"></i> Filtrer
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#" onclick="filterByStatus('Ouvert')">Bureaux Ouverts</a></li>
                <li><a class="dropdown-item" href="#" onclick="filterByStatus('Fermé')">Bureaux Fermés</a></li>
                <li><a class="dropdown-item" href="#" onclick="filterByStatus('')">Tous</a></li>
            </ul>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Statistiques rapides -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <i class="fas fa-building fa-2x mb-2"></i>
                <h4>@Model.Count()</h4>
                <p class="mb-0">Total Bureaux</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <i class="fas fa-door-open fa-2x mb-2"></i>
                <h4>@Model.Count(p => p.Status == "Ouvert")</h4>
                <p class="mb-0">Bureaux Ouverts</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body text-center">
                <i class="fas fa-door-closed fa-2x mb-2"></i>
                <h4>@Model.Count(p => p.Status == "Fermé")</h4>
                <p class="mb-0">Bureaux Fermés</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <i class="fas fa-users fa-2x mb-2"></i>
                <h4>@Model.Sum(p => p.RegisteredVoters).ToString("N0")</h4>
                <p class="mb-0">Électeurs Inscrits</p>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="pollingStationsTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Bureau</th>
                            <th>Localisation</th>
                            <th>Statut</th>
                            <th>Électeurs</th>
                            <th>Participation</th>
                            <th>Personnel</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var station in Model)
                        {
                            <tr data-status="@station.Status">
                                <td>
                                    <strong>@station.Name</strong>
                                    @if (!string.IsNullOrEmpty(station.Address))
                                    {
                                        <br><small class="text-muted">@station.Address</small>
                                    }
                                </td>
                                <td>
                                    <div>
                                        <i class="fas fa-map-marker-alt text-info"></i>
                                        @station.Region
                                    </div>
                                    <small class="text-muted">@station.Department</small>
                                    @if (!string.IsNullOrEmpty(station.Commune))
                                    {
                                        <br><small class="text-muted">@station.Commune</small>
                                    }
                                </td>
                                <td>
                                    @if (station.Status == "Ouvert")
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-door-open"></i> @station.Status
                                        </span>
                                    }
                                    else if (station.Status == "Fermé")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-door-closed"></i> @station.Status
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-clock"></i> @station.Status
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="text-center">
                                        <strong>@station.RegisteredVoters.ToString("N0")</strong>
                                        <br><small class="text-muted">inscrits</small>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-center">
                                        <strong>@station.VotesSubmitted.ToString("N0")</strong>
                                        <br>
                                        <span class="badge bg-info">@station.TurnoutRate.ToString("F1")%</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-center">
                                        @if (station.ScrutineersCount > 0 || station.ObserversCount > 0)
                                        {
                                            <small class="text-muted">
                                                @station.ScrutineersCount scrutateurs<br>
                                                @station.ObserversCount observateurs
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-warning">
                                                <i class="fas fa-exclamation-triangle"></i> Incomplet
                                            </span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group-vertical btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@station.Id" class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye"></i> Détails
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@station.Id" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                        @if (station.Status != "Ouvert")
                                        {
                                            <form asp-action="UpdateStatus" asp-route-id="@station.Id" method="post" style="display: inline;">
                                                <input type="hidden" name="status" value="Ouvert" />
                                                <button type="submit" class="btn btn-outline-success btn-sm w-100">
                                                    <i class="fas fa-door-open"></i> Ouvrir
                                                </button>
                                            </form>
                                        }
                                        @if (station.Status != "Fermé")
                                        {
                                            <form asp-action="UpdateStatus" asp-route-id="@station.Id" method="post" style="display: inline;">
                                                <input type="hidden" name="status" value="Fermé" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                                    <i class="fas fa-door-closed"></i> Fermer
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (ViewBag.TotalPages > 1)
            {
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="text-muted">
                        Affichage de @(((ViewBag.CurrentPage - 1) * ViewBag.PageSize) + 1) à 
                        @(Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalCount)) 
                        sur @ViewBag.TotalCount bureaux de vote
                    </div>
                    <nav aria-label="Pagination bureaux de vote">
                        <ul class="pagination pagination-sm mb-0">
                            @if (ViewBag.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?page=1&pageSize=@ViewBag.PageSize">
                                        <i class="fas fa-angle-double-left"></i>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)&pageSize=@ViewBag.PageSize">
                                        <i class="fas fa-angle-left"></i>
                                    </a>
                                </li>
                            }

                            @{
                                int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                                int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);
                            }

                            @for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="?page=@i&pageSize=@ViewBag.PageSize">@i</a>
                                </li>
                            }

                            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)&pageSize=@ViewBag.PageSize">
                                        <i class="fas fa-angle-right"></i>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="?page=@ViewBag.TotalPages&pageSize=@ViewBag.PageSize">
                                        <i class="fas fa-angle-double-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>

                <!-- Sélecteur de taille de page -->
                <div class="mt-2 text-center">
                    <small class="text-muted">
                        Éléments par page: 
                        @foreach (int size in new[] { 10, 20 })
                        {
                            @if (size == ViewBag.PageSize)
                            {
                                <span class="badge bg-primary">@size</span>
                            }
                            else
                            {
                                <a href="?page=1&pageSize=@size" class="badge bg-secondary text-decoration-none">@size</a>
                            }
                        }
                    </small>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-map-marker-alt fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">Aucun bureau de vote</h4>
                <p class="text-muted">Créez des bureaux de vote pour organiser les élections.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Créer le premier bureau
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function filterByStatus(status) {
            const rows = document.querySelectorAll('#pollingStationsTable tbody tr');
            rows.forEach(row => {
                if (status === '' || row.dataset.status === status) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        // Auto-actualisation toutes les 30 secondes pour les données en temps réel
        setInterval(function() {
            location.reload();
        }, 30000);

        // Auto-masquer les alertes
        setTimeout(function() {
            $('.alert').fadeOut();
        }, 5000);
    </script>
}