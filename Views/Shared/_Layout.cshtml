<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VcBlazor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VcBlazor.styles.css" asp-append-version="true" />
    
    <!-- Syncfusion Blazor CSS -->
    <link href="https://cdn.syncfusion.com/ej2/bootstrap5.css" rel="stylesheet" />
    
    <!-- Font Awesome pour les icônes -->
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ETOUDI 2025</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Accueil
                            </a>
                        </li>
                        
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="electionDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-vote-yea"></i> Élection
                                </a>
                            <ul class="dropdown-menu" aria-labelledby="electionDropdown">
                                <li><a class="dropdown-item" asp-controller="Election" asp-action="Dashboard">
                                    <i class="fas fa-tachometer-alt"></i> Tableau de bord
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Candidate" asp-action="Index">
                                    <i class="fas fa-users"></i> Candidats
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="ResultSubmission" asp-action="PollingStationSubmit">
                                    <i class="fas fa-poll-h"></i> Soumettre Résultats
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="ResultSubmission" asp-action="Index">
                                    <i class="fas fa-list-alt"></i> Soumissions
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="ElectionResult" asp-action="Index">
                                    <i class="fas fa-chart-bar"></i> Résultats
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="HourlyTurnout" asp-action="Index">
                                    <i class="fas fa-clock"></i> Affluence Horaire
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="VerificationTask" asp-action="Index">
                                    <i class="fas fa-tasks"></i> Tâches de Vérification
                                </a></li>
                            </ul>
                        </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="configDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-cogs"></i> Configuration Administrative
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="configDropdown">
                                <li class="dropdown-header">
                                    <i class="fas fa-map"></i> Découpage Territorial
                                </li>
                                <li><a class="dropdown-item" asp-controller="Region" asp-action="Index">
                                    <i class="fas fa-globe-africa"></i> Régions
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Department" asp-action="Index">
                                    <i class="fas fa-map-marked-alt"></i> Départements
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Arrondissement" asp-action="Index">
                                    <i class="fas fa-city"></i> Arrondissements
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Commune" asp-action="Index">
                                    <i class="fas fa-building"></i> Communes
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li class="dropdown-header">
                                    <i class="fas fa-vote-yea"></i> Infrastructure Électorale
                                </li>
                                <li><a class="dropdown-item" asp-controller="VotingCenter" asp-action="Index">
                                    <i class="fas fa-warehouse"></i> Centres de Vote
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="PollingStation" asp-action="Index">
                                    <i class="fas fa-map-marker-alt"></i> Bureaux de Vote
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="PollingStationHierarchy" asp-action="Index">
                                    <i class="fas fa-sitemap"></i> Hiérarchie des Bureaux
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li class="dropdown-header">
                                    <i class="fas fa-users-cog"></i> Administration
                                </li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="Index">
                                    <i class="fas fa-user-cog"></i> Utilisateurs
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li class="dropdown-header">
                                    <i class="fas fa-database"></i> Import Données
                                </li>
                                <li><a class="dropdown-item" asp-controller="Import" asp-action="Index">
                                    <i class="fas fa-file-import"></i> Import CSV
                                </a></li>
                            </ul>
                        </li>
                        }
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt"></i> Confidentialité
                            </a>
                        </li>
                    </ul>
                    
                    <!-- Boutons d'authentification -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user"></i> @(User.Identity.Name ?? "Utilisateur")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" href="#" onclick="event.preventDefault();">
                                        <i class="fas fa-info-circle"></i> Connecté en tant que: <strong>@(User.Identity.Name ?? "Utilisateur")</strong>
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="Profile">
                                        <i class="fas fa-user-edit"></i> Mon Profil
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                        <i class="fas fa-key"></i> Changer le mot de passe
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt"></i> Se déconnecter
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Se connecter
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-primary" asp-controller="Account" asp-action="CreateSuperAdmin">
                                    <i class="fas fa-user-shield"></i> Créer Admin
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - VcBlazor - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Syncfusion Blazor JavaScript -->
    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>
    
    <!-- Blazor Server JavaScript (si composants Blazor présents) -->
    <script src="_framework/blazor.server.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
