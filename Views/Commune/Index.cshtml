@model IEnumerable<VcBlazor.Data.Entities.Commune>

@{
    ViewData["Title"] = "Gestion des Communes - ETOUDI 2025";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm bg-gradient-success text-white">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="h3 mb-2">
                                <i class="fas fa-home me-2"></i>
                                Gestion des Communes
                            </h1>
                            <p class="mb-0 opacity-90">Administration des communes du système électoral ETOUDI 2025</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <a href="@Url.Action("Create")" class="btn btn-light btn-lg">
                                <i class="fas fa-plus me-2"></i>
                                Nouvelle Commune
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>
                        Liste des Communes (@Model.Count())
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4 py-3">ID</th>
                                        <th class="py-3">Nom</th>
                                        <th class="py-3">Arrondissement</th>
                                        <th class="py-3">Code</th>
                                        <th class="py-3">Centres de vote</th>
                                        <th class="py-3">Créé le</th>
                                        <th class="py-3 text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderBy(c => c.Name))
                                    {
                                        <tr>
                                            <td class="px-4 py-3"><code>@item.Id</code></td>
                                            <td class="py-3"><strong>@item.Name</strong></td>
                                            <td class="py-3">
                                                @if (item.Arrondissement != null)
                                                {
                                                    <span class="badge bg-primary">@item.Arrondissement.Name</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">ID: @item.ArrondissementId</span>
                                                }
                                            </td>
                                            <td class="py-3">
                                                @if (!string.IsNullOrEmpty(item.Code))
                                                {
                                                    <code>@item.Code</code>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="py-3">
                                                <span class="badge bg-info">@item.VotingCenters.Count</span>
                                            </td>
                                            <td class="py-3">
                                                <small class="text-muted">@item.CreatedAt.ToString("dd/MM/yyyy")</small>
                                            </td>
                                            <td class="py-3 text-center">
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("Details", new { id = item.Id })" 
                                                       class="btn btn-outline-primary" title="Voir détails">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = item.Id })" 
                                                       class="btn btn-outline-warning" title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-5 text-center">
                            <i class="fas fa-home fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucune commune trouvée</h5>
                            <p class="text-muted mb-4">Commencez par créer votre première commune.</p>
                            <a href="@Url.Action("Create")" class="btn btn-success">
                                <i class="fas fa-plus me-2"></i>
                                Créer une Commune
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-success { background: linear-gradient(45deg, #198754, #20c997); }
    code { background-color: #f8f9fa; color: #e83e8c; padding: 0.2rem 0.4rem; border-radius: 0.25rem; }
</style>