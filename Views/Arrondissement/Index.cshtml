@model IEnumerable<VcBlazor.Data.Entities.Arrondissement>

@{
    ViewData["Title"] = "Gestion des Arrondissements - ETOUDI 2025";
}

<div class="container-fluid py-4">
    <!-- En-tête -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm bg-gradient-primary text-white">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="h3 mb-2">
                                <i class="fas fa-city me-2"></i>
                                Gestion des Arrondissements
                            </h1>
                            <p class="mb-0 opacity-90">Administration des arrondissements du système électoral ETOUDI 2025</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <a href="@Url.Action("Create")" class="btn btn-light btn-lg">
                                <i class="fas fa-plus me-2"></i>
                                Nouvel Arrondissement
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-city fa-2x text-primary mb-2"></i>
                    <h3 class="mb-1">@Model.Count()</h3>
                    <small class="text-muted">Total Arrondissements</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-building fa-2x text-success mb-2"></i>
                    <h3 class="mb-1">@Model.Select(a => a.DepartmentId).Distinct().Count()</h3>
                    <small class="text-muted">Départements</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-home fa-2x text-info mb-2"></i>
                    <h3 class="mb-1">@Model.Sum(a => a.Communes.Count)</h3>
                    <small class="text-muted">Communes rattachées</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-calendar fa-2x text-warning mb-2"></i>
                    <h3 class="mb-1">@Model.Where(a => a.CreatedAt >= DateTime.Today.AddDays(-30)).Count()</h3>
                    <small class="text-muted">Nouveaux (30j)</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Liste des arrondissements -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0 py-3">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-0">
                                <i class="fas fa-list me-2"></i>
                                Liste des Arrondissements
                            </h5>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="btn-group">
                                <button class="btn btn-outline-primary btn-sm" onclick="window.print()">
                                    <i class="fas fa-print me-1"></i>
                                    Imprimer
                                </button>
                                <button class="btn btn-outline-success btn-sm" onclick="exportToExcel()">
                                    <i class="fas fa-file-excel me-1"></i>
                                    Excel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4 py-3">
                                            <i class="fas fa-hashtag me-1"></i>
                                            ID
                                        </th>
                                        <th class="py-3">
                                            <i class="fas fa-city me-1"></i>
                                            Nom de l'Arrondissement
                                        </th>
                                        <th class="py-3">
                                            <i class="fas fa-building me-1"></i>
                                            Département
                                        </th>
                                        <th class="py-3">
                                            <i class="fas fa-code me-1"></i>
                                            Code
                                        </th>
                                        <th class="py-3">
                                            <i class="fas fa-home me-1"></i>
                                            Communes
                                        </th>
                                        <th class="py-3">
                                            <i class="fas fa-calendar me-1"></i>
                                            Créé le
                                        </th>
                                        <th class="py-3 text-center">
                                            <i class="fas fa-cogs me-1"></i>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderBy(a => a.Name))
                                    {
                                        <tr>
                                            <td class="px-4 py-3">
                                                <code>@item.Id</code>
                                            </td>
                                            <td class="py-3">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-city text-primary me-2"></i>
                                                    <strong>@item.Name</strong>
                                                </div>
                                            </td>
                                            <td class="py-3">
                                                @if (item.Department != null)
                                                {
                                                    <span class="badge bg-primary">@item.Department.Name</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">ID: @item.DepartmentId</span>
                                                }
                                            </td>
                                            <td class="py-3">
                                                @if (!string.IsNullOrEmpty(item.Code))
                                                {
                                                    <code>@item.Code</code>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="py-3">
                                                <span class="badge bg-info">@item.Communes.Count</span>
                                            </td>
                                            <td class="py-3">
                                                <small class="text-muted">
                                                    @item.CreatedAt.ToString("dd/MM/yyyy")
                                                </small>
                                            </td>
                                            <td class="py-3 text-center">
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("Details", new { id = item.Id })" 
                                                       class="btn btn-outline-primary" title="Voir détails">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = item.Id })" 
                                                       class="btn btn-outline-warning" title="Modifier">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-5 text-center">
                            <i class="fas fa-city fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucun arrondissement trouvé</h5>
                            <p class="text-muted mb-4">Commencez par créer votre premier arrondissement.</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>
                                Créer un Arrondissement
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(45deg, #0d6efd, #0056b3);
    }
    
    .table td, .table th {
        vertical-align: middle;
    }
    
    code {
        background-color: #f8f9fa;
        color: #e83e8c;
        padding: 0.2rem 0.4rem;
        border-radius: 0.25rem;
    }
    
    .badge {
        font-size: 0.75rem;
        padding: 0.35em 0.65em;
    }
    
    .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.775rem;
    }
</style>

<script>
    function exportToExcel() {
        // Implémentation future pour export Excel
        alert('Fonctionnalité d\'export Excel à venir');
    }
</script>