@model VcBlazor.Data.Entities.Arrondissement

@{
    ViewData["Title"] = "Détails Arrondissement - ETOUDI 2025";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm bg-gradient-info text-white">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="h3 mb-2">
                                <i class="fas fa-city me-2"></i>
                                Arrondissement @Model.Name
                            </h1>
                            <p class="mb-0 opacity-90">
                                @if (Model.Department != null)
                                {
                                    <span>Département : <strong>@Model.Department.Name</strong></span>
                                }
                                else
                                {
                                    <span>Département ID : <strong>@Model.DepartmentId</strong></span>
                                }
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="btn-group">
                                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                                    <i class="fas fa-edit me-1"></i>
                                    Modifier
                                </a>
                                <a href="@Url.Action("Index")" class="btn btn-light">
                                    <i class="fas fa-arrow-left me-1"></i>
                                    Retour
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Informations générales
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="info-label">
                                <i class="fas fa-city text-primary me-2"></i>
                                Nom
                            </label>
                            <div class="info-value">@Model.Name</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="info-label">
                                <i class="fas fa-code text-primary me-2"></i>
                                Code
                            </label>
                            <div class="info-value">
                                @if (!string.IsNullOrEmpty(Model.Code))
                                {
                                    <code>@Model.Code</code>
                                }
                                else
                                {
                                    <span class="text-muted">Non défini</span>
                                }
                            </div>
                        </div>
                        <div class="col-12 mb-3">
                            <label class="info-label">
                                <i class="fas fa-building text-primary me-2"></i>
                                Département
                            </label>
                            <div class="info-value">
                                @if (Model.Department != null)
                                {
                                    <span class="badge bg-primary fs-6">@Model.Department.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">Département ID: @Model.DepartmentId</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Statistiques
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold">
                            <i class="fas fa-home text-primary me-2"></i>
                            Communes
                        </span>
                        <span class="badge bg-info fs-6">@Model.Communes.Count</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Communes.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light border-0 py-3">
                        <h5 class="mb-0">
                            <i class="fas fa-home me-2"></i>
                            Communes rattachées
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom</th>
                                        <th>Code</th>
                                        <th>Créée le</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var commune in Model.Communes.OrderBy(c => c.Name))
                                    {
                                        <tr>
                                            <td><code>@commune.Id</code></td>
                                            <td><strong>@commune.Name</strong></td>
                                            <td>@(commune.Code ?? "-")</td>
                                            <td>@commune.CreatedAt.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <a href="@Url.Action("Details", "Commune", new { id = commune.Id })" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Métadonnées -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2"></i>
                        Informations système
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-4">
                            <label class="info-label">ID</label>
                            <div class="info-value"><code>@Model.Id</code></div>
                        </div>
                        <div class="col-md-4">
                            <label class="info-label">Créé le</label>
                            <div class="info-value">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                        <div class="col-md-4">
                            <label class="info-label">Modifié le</label>
                            <div class="info-value">@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-info { background: linear-gradient(45deg, #0dcaf0, #0891b2); }
    .info-item { padding: 0.75rem 0; border-bottom: 1px solid rgba(0,0,0,0.1); }
    .info-item:last-child { border-bottom: none; }
    .info-label { font-size: 0.875rem; font-weight: 600; color: #6c757d; margin-bottom: 0.25rem; display: block; }
    .info-value { font-size: 1rem; font-weight: 500; color: #212529; }
    .badge.fs-6 { font-size: 0.875rem !important; padding: 0.5rem 0.75rem; }
    code { background-color: #f8f9fa; color: #e83e8c; padding: 0.2rem 0.4rem; border-radius: 0.25rem; }
</style>