@model VcBlazor.Data.Entities.Arrondissement

@{
    ViewData["Title"] = "Modifier Arrondissement - ETOUDI 2025";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm bg-gradient-warning text-dark">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="h3 mb-2">
                                <i class="fas fa-edit me-2"></i>
                                Modifier l'Arrondissement
                            </h1>
                            <p class="mb-0 opacity-80">
                                <strong>@Model.Name</strong> - Modification des informations
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="btn-group">
                                <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-info">
                                    <i class="fas fa-eye me-1"></i>
                                    Voir détails
                                </a>
                                <a href="@Url.Action("Index")" class="btn btn-dark">
                                    <i class="fas fa-arrow-left me-1"></i>
                                    Retour
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Modification des informations
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" novalidate>
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CreatedAt" type="hidden" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                        
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Name" class="form-label fw-bold">
                                    <i class="fas fa-city me-1"></i>
                                    Nom de l'arrondissement *
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg" 
                                       placeholder="Ex: Yaoundé 1er, Douala 5ème..." />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Code" class="form-label fw-bold">
                                    <i class="fas fa-code me-1"></i>
                                    Code
                                </label>
                                <input asp-for="Code" class="form-control form-control-lg" 
                                       placeholder="Ex: YDE1, DLA5..." />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DepartmentId" class="form-label fw-bold">
                                    <i class="fas fa-building me-1"></i>
                                    Département de rattachement *
                                </label>
                                <select asp-for="DepartmentId" class="form-select form-control-lg" asp-items="ViewBag.DepartmentId">
                                    <option value="">Sélectionnez un département...</option>
                                </select>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-home me-1"></i>
                                    Communes rattachées
                                </label>
                                <input type="text" class="form-control form-control-lg" 
                                       value="@Model.Communes.Count commune(s)" readonly />
                            </div>
                        </div>

                        @if (Model.Communes.Any())
                        {
                            <div class="row mb-3">
                                <div class="col-12">
                                    <div class="p-3 bg-light rounded">
                                        @foreach (var commune in Model.Communes.OrderBy(c => c.Name))
                                        {
                                            <span class="badge bg-secondary me-2 mb-2">@commune.Name</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label fw-bold text-muted">ID</label>
                                <input type="text" class="form-control" value="@Model.Id" readonly />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold text-muted">Créé le</label>
                                <input type="text" class="form-control" 
                                       value="@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")" readonly />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold text-muted">Modifié le</label>
                                <input type="text" class="form-control" 
                                       value="@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")" readonly />
                            </div>
                        </div>

                        <hr class="my-4">
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="text-muted">
                                        <i class="fas fa-asterisk text-danger me-1" style="font-size: 0.7em;"></i>
                                        Champs obligatoires
                                    </div>
                                    <div>
                                        <a href="@Url.Action("Details", new { id = Model.Id })" 
                                           class="btn btn-outline-secondary btn-lg me-2">
                                            <i class="fas fa-times me-2"></i>
                                            Annuler
                                        </a>
                                        <button type="submit" class="btn btn-warning btn-lg">
                                            <i class="fas fa-save me-2"></i>
                                            Enregistrer les modifications
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .bg-gradient-warning { background: linear-gradient(45deg, #ffc107, #ffb300); }
    .form-control[readonly] { background-color: #f8f9fa; opacity: 0.8; }
</style>