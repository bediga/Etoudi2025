@model VcBlazor.Data.Entities.PollingStationHierarchy

@{
    ViewData["Title"] = "Détails Bureau - ETOUDI 2025";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- En-tête -->
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div class="flex-grow-1">
                    <h2 class="h3 mb-1">
                        <i class="fas fa-sitemap text-primary"></i>
                        Détails du Bureau de Vote
                    </h2>
                    <p class="text-muted mb-0">Informations complètes du bureau de vote</p>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger"
                       onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce bureau de vote ?')">
                        <i class="fas fa-trash"></i> Supprimer
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- Informations principales -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-info-circle me-2"></i>Informations Générales
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-sitemap me-2"></i>Nom du Bureau
                                    </label>
                                    <p class="fs-5 fw-semibold text-dark">@Model.Name</p>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-hashtag me-2"></i>Numéro de Bureau
                                    </label>
                                    <p class="fs-5">
                                        <span class="badge bg-secondary fs-6">@Model.StationNumber</span>
                                    </p>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-warehouse me-2"></i>Centre de Vote
                                    </label>
                                    @if (Model.VotingCenter != null)
                                    {
                                        <p class="fs-6">
                                            <span class="badge bg-info-subtle text-info fs-6">@Model.VotingCenter.Name</span>
                                        </p>
                                        @if (Model.VotingCenter.Commune != null)
                                        {
                                            <small class="text-muted">
                                                <i class="fas fa-map-marker-alt me-1"></i>@Model.VotingCenter.Commune.Name
                                                @if (Model.VotingCenter.Commune.Arrondissement != null)
                                                {
                                                    <text>, @Model.VotingCenter.Commune.Arrondissement.Name</text>
                                                }
                                            </small>
                                        }
                                    }
                                    else
                                    {
                                        <p class="text-muted fst-italic">Non défini</p>
                                    }
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-info-circle me-2"></i>Statut
                                    </label>
                                    <p>
                                        @switch (Model.Status)
                                        {
                                            case "active":
                                                <span class="badge bg-success fs-6">
                                                    <i class="fas fa-check-circle me-1"></i>Actif
                                                </span>
                                                break;
                                            case "pending":
                                                <span class="badge bg-warning fs-6">
                                                    <i class="fas fa-clock me-1"></i>En attente
                                                </span>
                                                break;
                                            case "closed":
                                                <span class="badge bg-danger fs-6">
                                                    <i class="fas fa-times-circle me-1"></i>Fermé
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary fs-6">
                                                    <i class="fas fa-question-circle me-1"></i>@Model.Status
                                                </span>
                                                break;
                                        }
                                    </p>
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-key me-2"></i>ID Système
                                    </label>
                                    <p class="fs-6 text-dark">@Model.Id</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Données électorales -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-vote-yea me-2"></i>Données Électorales
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 text-center mb-3">
                                    <div class="border rounded p-3 bg-light">
                                        <i class="fas fa-users fa-2x text-primary mb-2"></i>
                                        <h3 class="mb-1">@Model.RegisteredVoters.ToString("N0")</h3>
                                        <p class="text-muted mb-0">Électeurs Inscrits</p>
                                    </div>
                                </div>
                                <div class="col-md-4 text-center mb-3">
                                    <div class="border rounded p-3 bg-light">
                                        <i class="fas fa-vote-yea fa-2x text-success mb-2"></i>
                                        <h3 class="mb-1">@Model.VotesSubmitted.ToString("N0")</h3>
                                        <p class="text-muted mb-0">Votes Soumis</p>
                                    </div>
                                </div>
                                <div class="col-md-4 text-center mb-3">
                                    <div class="border rounded p-3 bg-light">
                                        @{
                                            var turnoutColor = Model.TurnoutRate switch
                                            {
                                                >= 70 => "text-success",
                                                >= 50 => "text-warning",
                                                _ => "text-danger"
                                            };
                                        }
                                        <i class="fas fa-chart-line fa-2x @turnoutColor mb-2"></i>
                                        <h3 class="mb-1 @turnoutColor">@Model.TurnoutRate.ToString("F1")%</h3>
                                        <p class="text-muted mb-0">Taux Participation</p>
                                    </div>
                                </div>
                            </div>
                            
                            @if (Model.RegisteredVoters > 0)
                            {
                                <div class="mt-3">
                                    <label class="form-label text-muted">Progression</label>
                                    <div class="progress" style="height: 25px;">
                                        <div class="progress-bar bg-@(Model.TurnoutRate >= 70 ? "success" : Model.TurnoutRate >= 50 ? "warning" : "danger")" 
                                             role="progressbar" 
                                             style="width: @Model.TurnoutRate.ToString("F1", System.Globalization.CultureInfo.InvariantCulture)%"
                                             aria-valuenow="@Model.TurnoutRate" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                            @Model.TurnoutRate.ToString("F1")%
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Historique -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-clock me-2"></i>Historique & Timestamps
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-plus-circle me-2"></i>Date de Création
                                    </label>
                                    <p class="text-dark">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-edit me-2"></i>Dernière Modification
                                    </label>
                                    <p class="text-dark">@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-sync me-2"></i>Dernière MAJ Données
                                    </label>
                                    <p class="text-dark">
                                        @if (Model.LastUpdate.HasValue)
                                        {
                                            @Model.LastUpdate.Value.ToString("dd/MM/yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Jamais mis à jour</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Panneau latéral -->
                <div class="col-lg-4">
                    <!-- Actions rapides -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">
                                <i class="fas fa-bolt me-2"></i>Actions Rapides
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.Id" 
                                   class="btn btn-outline-primary">
                                    <i class="fas fa-edit me-2"></i>Modifier le Bureau
                                </a>
                                <a asp-controller="VotingCenter" asp-action="Details" asp-route-id="@Model.VotingCenterId" 
                                   class="btn btn-outline-info">
                                    <i class="fas fa-warehouse me-2"></i>Voir le Centre
                                </a>
                                <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#updateModal">
                                    <i class="fas fa-sync me-2"></i>Mettre à Jour Données
                                </button>
                                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#shareModal">
                                    <i class="fas fa-share me-2"></i>Partager Info
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Assignations (si disponibles) -->
                    @if (Model.BureauAssignments?.Any() == true)
                    {
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-secondary text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-users-cog me-2"></i>Assignations
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="text-muted">@Model.BureauAssignments.Count() assignation(s) active(s)</p>
                                <div class="d-grid">
                                    <button type="button" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-list me-2"></i>Voir Détails
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de mise à jour -->
<div class="modal fade" id="updateModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Mettre à Jour les Données</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Cette action mettra à jour le timestamp de dernière modification.</p>
                <p><strong>Bureau:</strong> @Model.Name</p>
                <p><strong>Statut actuel:</strong> @Model.Status</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-success" onclick="updateTimestamp()">
                    <i class="fas fa-sync me-2"></i>Mettre à Jour
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de partage -->
<div class="modal fade" id="shareModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Partager les Informations</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bureau: <strong>@Model.Name</strong></p>
                <p>Numéro: <strong>@Model.StationNumber</strong></p>
                @if (Model.VotingCenter != null)
                {
                    <p>Centre: @Model.VotingCenter.Name</p>
                }
                <p>Électeurs inscrits: @Model.RegisteredVoters</p>
                <p>Votes soumis: @Model.VotesSubmitted</p>
                <p>Taux participation: @Model.TurnoutRate.ToString("F1")%</p>
                <p>Statut: @Model.Status</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                <button type="button" class="btn btn-primary" onclick="copyToClipboard()">
                    <i class="fas fa-copy me-2"></i>Copier
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyToClipboard() {
            const text = `Bureau de Vote: @Model.Name
Numéro: @Model.StationNumber
@(Model.VotingCenter != null ? $"Centre: {Model.VotingCenter.Name}" : "")
Électeurs inscrits: @Model.RegisteredVoters
Votes soumis: @Model.VotesSubmitted
Taux participation: @Model.TurnoutRate.ToString("F1")%
Statut: @Model.Status`;
            
            navigator.clipboard.writeText(text).then(function() {
                alert('Informations copiées dans le presse-papier !');
            });
        }

        function updateTimestamp() {
            // Redirection vers l'action Edit pour mise à jour
            window.location.href = '@Url.Action("Edit", new { id = Model.Id })';
        }
    </script>
}

<style>
    .form-label {
        font-size: 0.875rem;
        font-weight: 600;
    }
    
    .card-header {
        border-bottom: none;
    }
    
    .bg-light {
        background-color: #f8f9fa !important;
    }
    
    .badge {
        padding: 0.5rem 0.75rem;
    }
    
    .progress {
        border-radius: 0.5rem;
    }
    
    .progress-bar {
        font-weight: 600;
        line-height: 25px;
    }
</style>