{
  "ConnectionStrings": {
    "DefaultConnection": "Host=prod-postgres-server;Database=Vc2025_Prod;Username=vcblazor_user;Password=STRONG_PRODUCTION_PASSWORD;Port=5432;SslMode=Require;Pooling=true;MinPoolSize=10;MaxPoolSize=200;",
    "RedisCache": "prod-redis-server:6379",
    "BackupConnection": "Host=backup-postgres-server;Database=Vc2025_Backup;Username=backup_user;Password=BACKUP_PASSWORD;Port=5432;SslMode=Require;"
  },
  "Application": {
    "Environment": "Production",
    "EnableDemo": false
  },
  "Security": {
    "RequireHttps": true,
    "EnableCors": false,
    "AllowedOrigins": [ "https://yourproductiondomain.com" ],
    "JwtSecret": "CHANGE_THIS_IN_PRODUCTION_WITH_STRONG_SECRET_KEY",
    "LockoutDuration": 30,
    "MaxFailedAccessAttempts": 3
  },
  "Features": {
    "EnableRealTimeUpdates": true,
    "EnableEmailNotifications": true,
    "EnableSmsNotifications": true,
    "EnableAuditLog": true,
    "EnableDataArchiving": true,
    "MaintenanceMode": false
  },
  "Database": {
    "EnableSensitiveDataLogging": false,
    "EnableMigrations": false,
    "CommandTimeout": 30,
    "RetryCount": 5
  },
  "Cache": {
    "DefaultExpirationMinutes": 60,
    "EnableDistributedCache": true
  },
  "Performance": {
    "EnableResponseCompression": true,
    "EnableResponseCaching": true,
    "MaxConcurrentRequests": 500,
    "EnableOutputCaching": true
  },
  "Monitoring": {
    "EnableDetailedErrors": false,
    "EnableHealthChecks": true,
    "EnableMetrics": true
  },
  "Email": {
    "SmtpServer": "smtp.yourprovider.com",
    "SmtpPort": 587,
    "SmtpUsername": "production-email@yourcompany.com",
    "SmtpPassword": "PRODUCTION_EMAIL_PASSWORD",
    "EnableSsl": true,
    "FromEmail": "noreply@yourcompany.com",
    "FromName": "VcBlazor Electoral System"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error",
      "Microsoft.EntityFrameworkCore.Database.Command": "Error",
      "VcBlazor": "Information"
    },
    "File": {
      "Path": "/var/log/vcblazor/vcblazor-{Date}.log",
      "FileSizeLimitBytes": 52428800,
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 90
    }
  },
  "Kestrel": {
    "Limits": {
      "MaxConcurrentConnections": 1000,
      "MaxRequestBodySize": 52428800,
      "RequestHeadersTimeout": "00:00:15"
    }
  }
}