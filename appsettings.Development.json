{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=vc2025;Username=postgres;Password=Vc!2025;Port=5432;Pooling=true;"
  },
  "Application": {
    "Environment": "Development",
    "EnableDemo": true
  },
  "Security": {
    "RequireHttps": false,
    "EnableCors": true,
    "AllowedOrigins": [ "*" ]
  },
  "Features": {
    "EnableRealTimeUpdates": true,
    "MaintenanceMode": false
  },
  "Database": {
    "EnableSensitiveDataLogging": true,
    "EnableMigrations": true,
    "CommandTimeout": 60
  },
  "Cache": {
    "DefaultExpirationMinutes": 5,
    "EnableDistributedCache": false
  },
  "Performance": {
    "EnableResponseCompression": false,
    "EnableResponseCaching": false
  },
  "Monitoring": {
    "EnableDetailedErrors": true,
    "EnableHealthChecks": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "Microsoft.EntityFrameworkCore.Query": "Debug",
      "Syncfusion": "Information",
      "VcBlazor": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "HH:mm:ss "
    }
  }
}
